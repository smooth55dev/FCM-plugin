#!/usr/bin/env node

// Simple tauri entry point for the FCM plugin example app
// This is a minimal entry point that allows the build system to work

const { spawn } = require('child_process');

// Get command line arguments
const args = process.argv.slice(2);

// If this is an android command, delegate to the actual tauri CLI
if (args[0] === 'android') {
    // Use node to run the tauri CLI directly
    const tauriCli = require.resolve('@tauri-apps/cli/tauri');
    const child = spawn('node', [tauriCli, ...args], {
        stdio: 'inherit',
        cwd: process.cwd()
    });
    
    child.on('close', (code) => {
        process.exit(code);
    });
} else {
    console.error('This is a minimal tauri entry point for the FCM plugin example.');
    console.error('Only "android" commands are supported.');
    process.exit(1);
}
